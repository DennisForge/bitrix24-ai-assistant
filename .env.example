# Application Configuration
APP_NAME=Bitrix24 AI Assistant
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered assistant for Bitrix24 CRM
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=False
APP_ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/bitrix24_ai_assistant
DATABASE_ECHO=False
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Bitrix24 API Configuration
BITRIX24_WEBHOOK_URL=https://your-bitrix24-domain.bitrix24.com/rest/1/your-webhook-key/
BITRIX24_CLIENT_ID=your-client-id
BITRIX24_CLIENT_SECRET=your-client-secret
BITRIX24_SCOPE=crm,calendar,tasks,user
BITRIX24_DOMAIN=your-bitrix24-domain.bitrix24.com

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=True
EMAIL_FROM=your-email@gmail.com

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=json
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Calendar Configuration
CALENDAR_SYNC_INTERVAL=5
CALENDAR_TIMEZONE=UTC
CALENDAR_DEFAULT_DURATION=60

# Task Configuration
TASK_AUTO_ASSIGN=True
TASK_DEFAULT_PRIORITY=medium
TASK_REMINDER_ADVANCE=1440

# AI Configuration
AI_ENABLED=True
AI_AUTO_CATEGORIZE=True
AI_SENTIMENT_ANALYSIS=True
AI_TASK_SUGGESTIONS=True

# Scheduler Configuration
SCHEDULER_ENABLED=True
SCHEDULER_TIMEZONE=UTC
SCHEDULER_MAX_WORKERS=4

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,txt,csv,jpg,jpeg,png,gif

# API Configuration
API_V1_PREFIX=/api/v1
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
METRICS_ENABLED=True
HEALTH_CHECK_ENABLED=True
